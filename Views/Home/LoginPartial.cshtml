@model LoginUser
<form asp-action="Login" asp-controller="Home" method="POST">
    <div class="form-group">
        <label asp-for="loginEmail"></label>
        <span style="color: red;" asp-validation-for="loginEmail"></span>
        <input class="form-control" asp-for="loginEmail">
    </div>

    <div class="form-group">
        <label asp-for="loginPassword"></label>
        <span style="color: red;" asp-validation-for="loginPassword"></span>
        <input class="form-control" asp-for="loginPassword">
    </div>
    <input type="submit" value="Login">
</form>